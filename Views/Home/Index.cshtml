@{
    ViewData["Title"] = "Home Page";
}

@* First section - Banner *@
<div class="start1">
    <h5 style="font-weight: 300; position: relative;">Welcome to TheMovieTime!</h5>
    <h1 class="display-4" style="font-weight: 500; position: relative;">Unlimited movies, TV <br>shows, and more.</h1>
    <h5 style="font-weight: 300; position: relative;">Watch anywhere. Cancel anytime.</h5>
    <a href="/Register" class="btn btn-dark btn-lg mt-3" style="position: relative;">Sign Up</a>
</div>

@* Second section *@
<div class="col col-12 pt-5 pb-5">
    <div class="container">
        <ul class="nav nav-tabs" id="myTab" role="tablist">
            <li class="nav-item" role="presentation">
                <button class="nav-link active" id="category-tab" data-bs-toggle="tab" data-bs-target="#season1"
                    type="button" role="tab" aria-controls="category" aria-selected="true">All Movies</button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="recent-movies-tab" data-bs-toggle="tab" data-bs-target="#season2"
                    type="button" role="tab" aria-controls="recent-movies" aria-selected="false">Batman Movies</button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="top-rated-tab" data-bs-toggle="tab" data-bs-target="#season3" type="button"
                    role="tab" aria-controls="top-rated" aria-selected="false">Star Wars</button>
            </li>
        </ul>

        <div class="tab-content" id="myTabContent">
            <div class="tab-pane fade show active " id="season1" role="tabpanel" aria-labelledby="category-tab">
                @foreach (var item in ViewBag.AllMovies)
                {
                    <div class="col col-md-4 p-5">
                        <h3>@item.name</h3>
                        @item.summary
                        <img src=@item.image.medium alt="No image from api" width="100%" height="auto">
                    </div>
                }
            </div>
            <div class="tab-pane fade show active" id="season2" role="tabpanel" aria-labelledby="category-tab">
                @foreach (var item in ViewBag.Season2)
                {
                    <div class="col col-md-4 p-5">
                        <h3>@item.name</h3>
                        @item.summary
                        <img src=@item.image.medium alt="No image from api" width="100%" height="auto">
                    </div>
                }
            </div>

            <div class="tab-pane fade show active" id="season3" role="tabpanel" aria-labelledby="category-tab">
                @foreach (var item in ViewBag.Season3)
                {
                    <div class="col col-md-4 p-5">
                        <h3>@item.name </h3>
                        @item.summary
                        <img src=@item.image.medium alt="No image from api" width="100%" height="auto">
                    </div>
                }

            </div>
        </div>
    </div>
</div>

